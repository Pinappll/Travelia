{% extends 'base.html.twig' %}

{% block title %}Voyages disponibles - {{ country.name }}{% endblock %}

{% block body %}
    <div class="p-6 bg-white shadow-md rounded-lg">
        <!-- Titre -->
        <h1 class="text-2xl font-bold text-blue-950 mb-6">Voyages disponibles à {{ country.name }}</h1>

        <!-- Liste des voyages -->
        <div class="space-y-6">
            {% for trip in trips %}
                <div class="flex items-start bg-gray-100 shadow-md rounded-lg overflow-hidden">
                    <!-- Image -->
                    <img src="{{ trip.image }}" alt="{{ trip.title }}" class="w-32 h-32 object-cover rounded-l-lg">

                    <!-- Détails -->
                    <div class="p-4 flex-1">
                        <h2 class="text-lg font-bold text-blue-950">{{ trip.title }}</h2>
                        <p class="text-gray-700 mb-2">{{ trip.description|length > 200 ? trip.description|slice(0, 200) ~ '...' : trip.description }}</p>
                        <p class="text-gray-900 font-semibold"><strong>Prix :</strong> {{ trip.pirce }} €</p>
                        <p class="text-gray-900 font-semibold"><strong>Dates :</strong> {{ trip.startDate|date('d/m/Y') }} - {{ trip.endDate|date('d/m/Y') }}</p>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-700 text-center">Aucun voyage disponible pour ce pays.</p>
            {% endfor %}
        </div>

        <!-- Lien de retour -->
        <div class="mt-6">
            <a href="{{ path('country') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-500">
                Retour à la liste des pays
            </a>
        </div>
    </div>
{% endblock %}
