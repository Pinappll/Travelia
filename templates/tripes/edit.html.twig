{% extends 'base.html.twig' %}

{% block title %}Modifier le voyage - {{ trip.title }}{% endblock %}

{% block body %}
    <div class="p-6 bg-white shadow-md rounded-lg max-w-4xl mx-auto">
        <!-- Titre -->
        <h1 class="text-3xl font-bold text-blue-950 mb-8 border-b pb-4">Modifier le voyage : {{ trip.title }}</h1>

        <!-- Formulaire -->
        <div class="mb-8">
            {{ include('tripes/_form.html.twig', { 'button_label': 'Mettre à jour' }) }}
        </div>

        <!-- Actions -->
        <div class="flex justify-between items-center space-x-4">
            <!-- Lien retour -->
            <a
                    href="{{ path('app_tripes_index') }}"
                    class="inline-flex items-center bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-500 transition focus:outline-none focus:ring-2 focus:ring-gray-300"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Retour à la liste
            </a>

            <!-- Formulaire de suppression -->
            <form
                    method="post"
                    action="{{ path('app_tripes_delete', { 'id': trip.id }) }}"
                    onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce voyage ?');"
                    class="inline-block"
            >
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trip.id) }}">
                <button
                        type="submit"
                        class="inline-flex items-center bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-500 transition focus:outline-none focus:ring-2 focus:ring-red-300"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Supprimer
                </button>
            </form>
        </div>
    </div>
{% endblock %}
