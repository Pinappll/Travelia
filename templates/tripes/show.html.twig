{% extends 'base.html.twig' %}

{% block title %}Détails du voyage - {{ trip.title }}{% endblock %}

{% block body %}
    <div class="p-6 bg-white shadow-md rounded-lg max-w-4xl mx-auto">
        <!-- Titre -->
        <h1 class="text-3xl font-bold text-blue-950 mb-8 border-b pb-4">Détails du voyage</h1>

        <!-- Tableau des détails -->
        <table class="w-full border-collapse border border-gray-200">
            <tbody>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Id</th>
                <td class="px-4 py-2 text-gray-700">{{ trip.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Titre</th>
                <td class="px-4 py-2 text-gray-700">{{ trip.title }}</td>
            </tr>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Description</th>
                <td class="px-4 py-2 text-gray-700">{{ trip.description }}</td>
            </tr>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Prix (€)</th>
                <td class="px-4 py-2 text-gray-700">{{ trip.pirce }}</td>
            </tr>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Date de début</th>
                <td class="px-4 py-2 text-gray-700">{{ trip.startDate ? trip.startDate|date('d/m/Y') : 'N/A' }}</td>
            </tr>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Date de fin</th>
                <td class="px-4 py-2 text-gray-700">{{ trip.endDate ? trip.endDate|date('d/m/Y') : 'N/A' }}</td>
            </tr>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Image</th>
                <td class="px-4 py-2">
                    <img
                            src="{{ trip.image }}"
                            alt="{{ trip.title }}"
                            class="w-32 h-32 object-cover rounded-lg shadow-md"
                    >
                </td>
            </tr>
            </tbody>
        </table>

        <!-- Actions -->
        <div class="mt-6 flex space-x-4">
            <a
                    href="{{ path('app_tripes_index') }}"
                    class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-500 transition focus:outline-none focus:ring-2 focus:ring-gray-300"
            >
                Retour à la liste
            </a>

            <a
                    href="{{ path('app_tripes_edit', {'id': trip.id}) }}"
                    class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-500 transition focus:outline-none focus:ring-2 focus:ring-blue-300"
            >
                Modifier
            </a>

            {{ include('tripes/_delete_form.html.twig', {
                'class': 'bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-500 transition focus:outline-none focus:ring-2 focus:ring-red-300'
            }) }}
        </div>
    </div>
{% endblock %}
