{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau pays{% endblock %}

{% block body %}
    <div class="p-6 bg-white shadow-md rounded-lg">
        <!-- Titre -->
        <h1 class="text-2xl font-bold text-blue-950 mb-6">Créer un nouveau pays</h1>

        <!-- Formulaire -->
        <div class="mb-6">
            {{ include('countries/_form.html.twig', { 'button_label': 'Créer' }) }}
        </div>

        <!-- Lien de retour -->
        <div>
            <a href="{{ path('app_countries_index') }}"
               class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-500 transition">
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
