{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
    <div class="bg-white shadow-md rounded-lg p-8 text-center max-w-md">
        <!-- Icône -->
        <div class="text-red-500 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636" />
            </svg>

        </div>

        <!-- Titre -->
        <h1 class="text-2xl font-bold text-red-600 mb-4">Accès interdit</h1>

        <!-- Message -->
        <p class="text-gray-700 mb-6">{{ message }}</p>

        <!-- Bouton de retour -->
        <a href="{{ path('app_logout') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-500 transition">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}