{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
    <div class="p-6 bg-white shadow-md rounded-lg">
        <!-- Titre -->
        <h1 class="text-2xl font-bold text-blue-950 mb-6">Modifier l'utilisateur</h1>

        <!-- Formulaire -->
        <div class="mb-6">
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <!-- Prénom -->
            <div>
                {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.firstname) }}
            </div>

            <!-- Nom -->
            <div>
                {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.lastname) }}
            </div>

            <!-- Email -->
            <div>
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <!-- Mot de passe -->
            <div>
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.password) }}
            </div>

            <!-- Rôle (Liste déroulante) -->
            <div>
                {{ form_label(form.roles, 'Rôle', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                {{ form_widget(form.roles, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.roles) }}
            </div>

            <!-- Bouton de soumission -->
            <div>
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-500">
                    Mettre à jour
                </button>
            </div>

            {{ form_end(form) }}
        </div>

        <!-- Retour à la liste -->
        <div class="mt-6">
            <a href="{{ path('app_user_index') }}" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-500">
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
