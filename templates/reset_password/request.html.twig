{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-white">
        <div class="max-w-md w-full bg-white p-8 shadow-lg rounded-lg">
            <!-- Flash messages -->
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <!-- Titre -->
            <h1 class="text-2xl font-bold text-blue-950 text-center mb-6">Réinitialiser votre mot de passe</h1>

            <!-- Formulaire -->
            {{ form_start(requestForm, { attr: { class: 'space-y-4' } }) }}

            <!-- Champ email -->
            <div>
                {{ form_label(requestForm.email, 'Adresse email', { label_attr: { class: 'block text-gray-700 font-semibold mb-2' } }) }}
                {{ form_widget(requestForm.email, { attr: { class: 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <!-- Texte d'aide -->
            <div class="text-sm text-gray-600 mb-4">
                Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </div>

            <!-- Bouton d'envoi -->
            <button
                    type="submit"
                    class="w-full bg-blue-950 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-800 transition duration-300"
            >
                Envoyer l'email de réinitialisation
            </button>

            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
