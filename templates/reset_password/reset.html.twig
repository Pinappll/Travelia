{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="max-w-md w-full bg-white p-8 shadow-lg rounded-lg">
            <!-- Titre -->
            <h1 class="text-2xl font-bold text-blue-950 text-center mb-6">Réinitialiser votre mot de passe</h1>

            <!-- Formulaire -->
            {{ form_start(resetForm, { attr: { class: 'space-y-4' } }) }}

            <!-- Champ mot de passe -->
            <div>
                {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe', { label_attr: { class: 'block text-gray-700 font-semibold mb-2' } }) }}
                {{ form_widget(resetForm.plainPassword, { attr: { class: 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
                {{ form_errors(resetForm.plainPassword) }}
            </div>

            <!-- Bouton de réinitialisation -->
            <button
                    type="submit"
                    class="w-full bg-blue-950 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-800 transition duration-300"
            >
                Réinitialiser le mot de passe
            </button>

            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
