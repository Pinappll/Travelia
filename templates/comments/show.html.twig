{% extends 'base.html.twig' %}

{% block title %}Détails du commentaire{% endblock %}

{% block body %}
    <div class="p-6 bg-white shadow-md rounded-lg max-w-4xl mx-auto">
        <!-- Titre -->
        <h1 class="text-3xl font-bold text-blue-950 mb-8 border-b pb-4">Détails du commentaire</h1>

        <!-- Tableau des détails -->
        <table class="w-full border-collapse border border-gray-200 mb-8">
            <tbody>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Id</th>
                <td class="px-4 py-2 text-gray-700">{{ comment.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Contenu</th>
                <td class="px-4 py-2 text-gray-700">{{ comment.content }}</td>
            </tr>
            <tr>
                <th class="text-left px-4 py-2 font-semibold text-gray-700 bg-gray-100">Créé le</th>
                <td class="px-4 py-2 text-gray-700">{{ comment.createdAt ? comment.createdAt|date('d/m/Y H:i') : 'N/A' }}</td>
            </tr>
            </tbody>
        </table>

        <!-- Actions -->
        <div class="flex space-x-4">
            <!-- Lien retour -->
            <a
                    href="{{ path('app_comments_index') }}"
                    class="inline-block bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-500 transition focus:outline-none focus:ring-2 focus:ring-gray-300"
            >
                Retour à la liste
            </a>

            <!-- Lien d'édition -->
            <a
                    href="{{ path('app_comments_edit', {'id': comment.id}) }}"
                    class="inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-500 transition focus:outline-none focus:ring-2 focus:ring-blue-300"
            >
                Modifier
            </a>

            <!-- Formulaire de suppression -->
            {{ include('comments/_delete_form.html.twig', {
                'class': 'inline-block bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-500 transition focus:outline-none focus:ring-2 focus:ring-red-300'
            }) }}
        </div>
    </div>
{% endblock %}
